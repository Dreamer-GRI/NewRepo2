<Page x:Class="PR_VR3_GRISHIN.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR_VR3_GRISHIN.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Выбор страницы" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="50" Margin="0 15 0 0" FontWeight="Bold"/>

            <Button x:Name="btnCustomer" Content="Заказчики" FontSize="35" FontWeight="Bold" Height="50" Width="450" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 100 0 0" Click="btnCustomer_Click"/>
            <Button x:Name="btnOrder" Content="Заказы" FontSize="35" FontWeight="Bold" Height="50" Width="450" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 20 0 0" Click="btnOrder_Click"/>
        </StackPanel>
    </Grid>
</Page>
